%% Ejercicio 7: transformaciones de la variable independiente

nx=[-3:11]
x=[zeros(1, 3) 2 0 1 -1 3 zeros(1,7)]

figure;
stem(nx, x);
title('Se√±al discreta X[n]');
xlabel('Tiempo (Discreto)');
ylabel('Valor');

figure;
subplot(2,2,1);
y1=x;
ny1=nx+2;
stem(ny1,y1);
title('x retrasada 2');
xlabel('ny1');

subplot(2,2,2);
y2=x;
ny2=nx-1;
stem(ny2,y2);
title('x adelantada 1');
xlabel('ny2');

subplot(2,2,3);
y3=x
ny3=-nx
title('x invertida');
xlabel('ny3');

subplot(2,2,4);
y4=x
ny4=-nx+1
title('x invertida y adelantada 1');
xlabel('ny1');
